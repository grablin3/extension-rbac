{
  "version": "3.0.0",
  "metadata": {
    "id": "extension-rbac",
    "name": "Role-Based Access Control",
    "kind": "extension",
    "type": "rbac",
    "layers": [
      "backend"
    ],
    "description": "Adds user authentication, role-based access control, and user management for Spring Boot and Django REST Framework",
    "version": "1.0.0",
    "author": "Genesis Team",
    "tags": [
      "security",
      "authentication",
      "users",
      "rbac",
      "roles"
    ],
    "providers": ["aws"],
    "compatibleWith": [
      "spring",
      "drf"
    ],
    "dependsOn": [
      "extension-database"
    ],
    "springProfiles": [
      "security"
    ],
    "djangoSettings": [],
    "allowMultiple": false
  },
  "scaffoldConfigTemplate": [
    {
      "key": "enableJwtAuth",
      "label": "Enable JWT Authentication",
      "type": "boolean",
      "default": true,
      "required": false,
      "description": "Enable JWT token-based authentication",
      "category": "authentication"
    }
  ],
  "dependencies": {
    "gradle": [
      "implementation 'org.springframework.boot:spring-boot-starter-security'",
      "implementation 'org.springframework.boot:spring-boot-starter-oauth2-resource-server'",
      "implementation 'org.apache.commons:commons-lang3:3.18.0'"
    ],
    "maven": [
      "<dependency><groupId>org.springframework.boot</groupId><artifactId>spring-boot-starter-security</artifactId></dependency>",
      "<dependency><groupId>org.springframework.boot</groupId><artifactId>spring-boot-starter-oauth2-resource-server</artifactId></dependency>",
      "<dependency><groupId>org.apache.commons</groupId><artifactId>commons-lang3</artifactId><version>3.18.0</version></dependency>"
    ],
    "pip": [
      "djangorestframework-simplejwt==5.3.1"
    ]
  },
  "generation": {
    "files": {
      "remove": []
    },
    "layers": {
      "backend": {}
    },
    "postProcess": []
  },
  "runtimeConfigTemplate": [
    {
      "key": "JWT_SECRET_KEY",
      "description": "Secret key for JWT token signing",
      "example": "your-256-bit-secret-key",
      "required": true,
      "default": "runtime",
      "secret": true,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    },
    {
      "key": "JWT_EXPIRATION_MS",
      "description": "JWT token expiration in milliseconds",
      "example": "86400000",
      "required": false,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": true
    },
    {
      "key": "JWT_ISSUER_URI",
      "description": "JWT token issuer URI (for OAuth2 resource server)",
      "example": "https://auth.example.com",
      "required": false,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    },
    {
      "key": "JWT_JWK_SET_URI",
      "description": "JWT JWK Set URI for token validation",
      "example": "https://auth.example.com/.well-known/jwks.json",
      "required": false,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    },
    {
      "key": "APP_ROOT_USERS",
      "description": "Comma-separated list of root user emails",
      "example": "root@example.com,admin@example.com",
      "required": false,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    },
    {
      "key": "APP_ADMIN_USERS",
      "description": "Comma-separated list of admin user emails",
      "example": "admin1@example.com,admin2@example.com",
      "required": false,
      "secret": false,
      "targets": [
        "backend"
      ],
      "commonForAllEnv": false
    }
  ],
  "gitignore": []
}
